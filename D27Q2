/*
class Node {
  public:
    int data;
    Node* next;

    Node(int val) {
        data = val;
        next = nullptr;
    }
};
*/
class Solution {
  public:
    void removeLoop(Node* head) {
         if (!head || !head->next) return;

        Node *slow = head;
        Node *fast = head;

        bool loopExists = false;
        while (fast && fast->next) {
            slow = slow->next;
            fast = fast->next->next;
            if (slow == fast) {
                loopExists = true;
                break;
            }
        }

        if (loopExists) {
            slow = head;
            if (slow == fast) {
                while (fast->next != slow) {
                    fast = fast->next;
                }
            } 
            else {
                while (slow->next != fast->next) {
                    slow = slow->next;
                    fast = fast->next;
                }
            }
            
            fast->next = nullptr;
        }
        
    }
};
